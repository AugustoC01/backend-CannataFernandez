<h1>Listado de productos</h1>
{{#if productsExist}}
    {{#each products}}
        <div>
            {{this.id}}<br/>
            {{this.title}}<br/>
            {{this.price}}<br/>
            <img src="{{this.thumbnail}}" class="product-img"/>
        </div>
    {{/each}}
{{else}}
    <h1>No se encontraron productos</h1>
{{/if}}

<a href='/form'>
   <input type='button' value='Formulario' />
</a>

